                  </AnchorPane>
                  <AnchorPane GridPane.columnIndex="2">
                     <children>
                        <Button fx:id="modifyRecipeButton" mnemonicParsing="false" onAction="#modifyRecipe" text="Modify Recipe" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
                  <AnchorPane GridPane.columnIndex="3">
                     <children>
                        <Button fx:id="viewRecipeButton" mnemonicParsing="false" onAction="#viewRecipe" text="View Recipe Details" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
               </children>
            </GridPane>
         </children>
      </AnchorPane>
      <TableView fx:id="recipesTableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="Recipe Name" />
          <TableColumn fx:id="ingredientCol" prefWidth="75.0" text="Ingredients" />
            <TableColumn fx:id="quantityCol" prefWidth="75.0" text="Quantity" editable="true"/>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
